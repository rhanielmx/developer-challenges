generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String

  machines Machine[]
}

enum MachineType {
  PUMP
  FAN
}

model Machine {
  id   Int         @id @default(autoincrement())
  name String
  type MachineType

  monitoredBy User   @relation(fields: [userId], references: [id])
  userId      String @map("user_id")

  monitoringPoints MonitoringPoint[]
}

enum SensorModel {
  TCAG @map("TcAg")
  TCAS @map("TcAs")
  HF   @map("HF+")
}

model Sensor {
  id    Int         @id @default(autoincrement())
  name  String
  model SensorModel

  monitoringPoint   MonitoringPoint @relation(fields: [monitoringPointId], references: [id])
  monitoringPointId Int             @map("monitoring_point_id")
}

model MonitoringPoint {
  id   Int    @id @default(autoincrement())
  name String

  machine   Machine @relation(fields: [machineId], references: [id])
  machineId Int     @map("machine_id")

  sensors Sensor[]
}
